# Multiboard Sync Service Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# DATABASE CONNECTIONS
# ============================================

# Production Database
PRODUCTION_DATABASE_URL=postgresql://user:password@host:5432/database

# Staging Database  
STAGING_DATABASE_URL=postgresql://user:password@host:5432/database

# Development Database
DEV_DATABASE_URL=postgresql://user:password@localhost:5432/database

# ============================================
# TYPESENSE CONFIGURATION
# ============================================

TYPESENSE_HOST=your-typesense-host.com
TYPESENSE_PORT=443
TYPESENSE_PROTOCOL=https
TYPESENSE_API_KEY=your-typesense-api-key

# Collections to sync
TYPESENSE_COLLECTIONS=components,parts,attributes

# ============================================
# REDIS (for job queue)
# ============================================

REDIS_URL=redis://localhost:6379

# ============================================
# SERVICE CONFIGURATION
# ============================================

# Port to run the service on
PORT=8080

# Node environment
NODE_ENV=production

# API Key for accessing this service
API_KEY=generate-a-random-string-here

# ============================================
# OPERATIONAL SETTINGS
# ============================================

# Maximum file size for dumps (in GB)
MAX_DUMP_SIZE_GB=10

# Job timeout in minutes
JOB_TIMEOUT_MINUTES=60

# Maximum concurrent sync jobs
MAX_CONCURRENT_JOBS=2

# Enable automatic backups before import
AUTO_BACKUP=true

# Enable compression for SQL dumps
ENABLE_COMPRESSION=true

# Backup retention in days
BACKUP_RETENTION_DAYS=7

# Directory for storing dumps and backups
DUMP_DIRECTORY=/var/lib/sync-service/dumps
BACKUP_DIRECTORY=/var/lib/sync-service/backups